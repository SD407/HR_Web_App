<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="imCandidateDAO" class="ro.sit.hrapp.dao.inmemory.IMCandidateDAO"/>
	<bean id="candidateService" class="ro.sit.hrapp.service.CandidateService">
	    <property name="candidateDAO" ref="imCandidateDAO" />
	</bean> 
	
	<bean id="imCompanyDAO" class="ro.sit.hrapp.dao.inmemory.IMCompanyDAO"/>
	<bean id="companyService" class="ro.sit.hrapp.service.CompanyService">
	    <property name="companyDAO" ref="imCompanyDAO" />
	</bean> 
	
	<bean id="candidateValidator" class="ro.sit.hrapp.service.validator.CandidateRegistrationValidator" />
	<bean id="companyValidator" class="ro.sit.hrapp.service.validator.CompanyRegistrationValidator" />

</beans>
